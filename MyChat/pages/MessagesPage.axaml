<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyChat.pages.MessagesPage">

        <Grid RowDefinitions="Auto, *, Auto, Auto" Margin="5" Classes="painted">
                <!-- Верхняя панель -->
                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                        <Button x:Name="MembersBtn" Content="Участники" DockPanel.Dock="Right" Click="Members_Btn"/>
                        <TextBlock Name="GroupName" Text="Название выбранной группы" VerticalAlignment="Center" FontWeight="Bold" FontSize="16"/>
                </DockPanel>

                <!-- Список сообщений -->
                <ListBox x:Name="MessageContainer" Grid.Row="1">
                        
                </ListBox>

                <Button Grid.Row="2" Content="След." HorizontalAlignment="Right" Click="Pag_Next_Btn"/>
                <Button Grid.Row="2" Content="Пред." HorizontalAlignment="Left" Click="Pag_Prev_Btn"/>

                <!-- Поле ввода -->
                <Grid Grid.Row="3" ColumnDefinitions="Auto, *, Auto" Margin="0,10,0,0">
                        <Button Content="Фото" Grid.Column="0" HorizontalAlignment="Stretch" Click="On_Open_File_Btn"/>
                        <TextBox x:Name="messageText" Grid.Column="1" Watermark="Введите сообщение..."/>
                        <Button Grid.Column="2" Content="Отправить" Margin="5,0,0,0" Click="Send_Message_Btn" Classes="send"/>
                </Grid>
        </Grid>
</UserControl>