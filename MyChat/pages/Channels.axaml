<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyChat.pages.Channels">

        <Grid RowDefinitions="Auto, Auto,*,Auto" ColumnDefinitions="*,*">  <!-- Добавлено ColumnDefinitions -->
            
            <!-- Верхняя панель поиска занимает обе колонки -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto">
                <TextBox x:Name="SearchField" Grid.Column="0" Watermark="Поиск групп..." Margin="5"/>
                <Button x:Name="SearchBtn" Grid.Column="1" Content="Поиск" Click="Search_Button_Click" Margin="5"/>
            </Grid>
            
            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Создать группу" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Create_Channel_Btn"/>

            <!-- ScrollViewer занимает обе колонки -->
            <ScrollViewer Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                <StackPanel x:Name="ChatContainer" Spacing="2" />
            </ScrollViewer>

            <!-- Кнопки пагинации в разных колонках -->
            <Button x:Name="PagPrevBtn" Grid.Row="3" Grid.Column="0" Content="Пред." 
                    HorizontalAlignment="Right" Margin="5" Padding="15,5" Click="Pag_Prev_Btn"/>
            
            <Button x:Name="PagNextBtn" Grid.Row="3" Grid.Column="1" Content="След." 
                    HorizontalAlignment="Left" Margin="5" Padding="15,5" Click="Pag_Next_Btn"/>
        </Grid>
</UserControl>