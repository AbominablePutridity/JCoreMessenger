<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyChat.pages.EditMembers"
        >

        <!--Viewbox Stretch="Uniform" MaxWidth="800" MaxHeight="Infinity"-->
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, *, Auto" ColumnDefinitions="*, Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button Grid.Column="0" Content="Назад" Margin="5" HorizontalAlignment="Left"/>

            <!-- Первая строка: текстовое поле и кнопка -->
            <TextBox Grid.Row="1" Grid.Column="0" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Кнопка 1" Margin="5"/>
            
            <!-- Вторая строка: текстовое поле и кнопка -->
            <TextBox Grid.Row="2" Grid.Column="0" Margin="5"/>
            <Button Grid.Row="2" Grid.Column="1" Content="Кнопка 2" Margin="5"/>
            
            <!-- Пустая строка для отступа -->
            <Rectangle Grid.Row="3" Height="10"/>
            
            <!-- ListBox -->
            <ListBox Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            
            <!-- Последняя строка: 3 кнопки -->
            <Grid Grid.Row="5" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="След." Margin="5" HorizontalAlignment="Left"/>
                <Button Grid.Column="1" Content="Удалить группу" Margin="5" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Content="Пред." Margin="5" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    <!--/Viewbox-->
</UserControl>